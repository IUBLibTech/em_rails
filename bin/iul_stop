#!/bin/bash     
SERVICE_NAME=em
SERVICE_ROOT=/srv/services/em-prod-8353
SERVICE_PORT=8353                                                                                                                                                                
PID_FILE=$SERVICE_ROOT/tmp/pids/server.pid

if [ -e $PID_FILE ]; then
    echo "Stopping $SERVICE_NAME"
    kill $(cat $PID_FILE)
    sleep 10
    if [ -e $PID_FILE ]; then
	echo "Failed soft shutdown of $SERVICE_NAME"
	echo "Killing process $(cat $PID_FILE)"
	kill -9 $(cat $PID_FILE)
	rm $PID_FILE
    fi
fi
