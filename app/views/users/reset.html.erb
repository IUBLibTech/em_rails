<div id="content">
  <div class="indent-content wide">
    <div id="login">
      <h3>Password Reset</h3>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prevented your account from being created:</h2>
          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for :user, url: users_reset_path(@user.id), method: :post do |f| %>
        <table class="wwFormTable" style="accountForm">
          <tbody>
            <tr>
              <td class="tdLabel"><label for="password" class="label">New Password:</label></td>
              <td class="tdInput"><%= f.password_field :password %></td>
            </tr>
            <tr>
              <td class="tdLabel"><label for="password_confirmation" class="label">Repeat New Password:</label></td>
              <td class="tdInput"><%= f.password_field :password_confirmation %></td>
            </tr>
            <tr>
              <td colspan="2">
                <div class="formButton"><%= f.submit "Reset Your Password" %></div>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
